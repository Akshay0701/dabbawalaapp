<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".dabbawala.Dabawalaregister">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="-140dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/backcard"
            android:layout_height="480dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/daba_name"
                android:layout_marginTop="30dp"
                android:hint="Name"
                android:textColorHint="@color/cardview_dark_background"
                android:paddingLeft="40dp"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/editbox"
                android:layout_centerVertical="true"
            ></EditText>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/daba_email"
                android:layout_marginTop="0dp"
                android:hint="Email"
                android:textColorHint="@color/cardview_dark_background"
                android:paddingLeft="40dp"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/editbox"
                android:layout_centerVertical="true"
               ></EditText>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/daba_password"
                android:layout_marginTop="0dp"
                android:hint="Password"
                android:textColorHint="@color/cardview_dark_background"
                android:paddingLeft="40dp"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/editbox"
                android:layout_centerVertical="true"
                ></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/daba_PhoneNo"
                android:layout_marginTop="0dp"
                android:hint="Phone No"
                android:textColorHint="@color/cardview_dark_background"
                android:paddingLeft="40dp"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/editbox"
                android:layout_centerVertical="true"

              ></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/daba_Address"
                android:layout_marginTop="0dp"
                android:hint="Address"
                android:textColorHint="@color/cardview_dark_background"
                android:paddingLeft="40dp"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/editbox"
                android:layout_centerVertical="true"

                ></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/daba_Special"
                android:layout_marginTop="0dp"
                android:hint="Phone No"
                android:textColorHint="@color/cardview_dark_background"
                android:paddingLeft="40dp"
                android:textColor="@color/cardview_dark_background"
                android:background="@drawable/editbox"
                android:layout_centerVertical="true"

                ></EditText>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/daba_submit"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/register"
                android:textColor="@color/colorPrimaryDark">

            </Button>
            <TextView
                android:layout_width="match_parent"
                android:text="Are You Already Register.."
                android:textColor="@color/colorAccent"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:padding="3dp"
                android:layout_height="wrap_content"></TextView>
            <Button
                android:id="@+id/daba_signIn"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbtn"
                android:textColor="@color/colorPrimaryDark">

            </Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"></TextView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>