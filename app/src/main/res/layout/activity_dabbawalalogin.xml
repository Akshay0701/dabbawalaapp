<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".dabbawala.Dabbawalalogin">

<TextView
android:layout_width="match_parent"
android:text=" Dabbawala Login Page "
android:id="@+id/login"
android:textSize="30dp"
android:textAlignment="center"
android:textStyle="bold"
android:textColor="@color/colorAccent"
android:layout_marginTop="20dp"
android:layout_height="wrap_content"></TextView>
    <ImageView
        android:layout_width="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login"
        android:layout_margin="30dp"
        android:layout_height="200dp"></ImageView>

<EditText
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/passwordEd"
android:hint="Password"
android:layout_below="@+id/UsernameEd"
    android:layout_margin="20dp"
    android:textColorHint="@color/colorAccent"
android:textColor="@color/colorAccent"
android:layout_centerVertical="true"
    ></EditText>

<EditText
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/UsernameEd"
android:layout_below="@+id/phoneNoEt"
    android:layout_margin="20dp"
android:hint="Email"
    android:textColorHint="@color/colorAccent"
android:textColor="@color/colorAccent"
android:layout_centerVertical="true"
    ></EditText>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passwordEd"
        android:background="@color/colorAccent"
        android:text="Login"></Button>
</RelativeLayout>
