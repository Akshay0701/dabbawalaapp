<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".user.UserLogin">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="Register Page "
        android:id="@+id/login"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_below="@+id/login"
        android:layout_margin="20dp"
        android:layout_height="250dp"
        android:src="@drawable/dabbawalalogo"
        ></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="-140dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/backcard"
        android:layout_height="480dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/NameEt"
        android:layout_marginTop="30dp"
        android:hint="Name"
        android:textColorHint="@color/cardview_dark_background"
        android:paddingLeft="40dp"
        android:textColor="@color/cardview_dark_background"
        android:background="@drawable/editbox"
        android:layout_centerVertical="true"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/phoneNoEt"
        android:layout_margin="0dp"
        android:hint="Phone No"
        android:textColorHint="@color/cardview_dark_background"
        android:paddingLeft="40dp"
        android:textColor="@color/cardview_dark_background"
        android:background="@drawable/editbox"
        android:layout_centerVertical="true"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/passwordEt"
        android:layout_margin="0dp"
        android:hint="Password"
        android:textColorHint="@color/cardview_dark_background"
        android:paddingLeft="40dp"
        android:textColor="@color/cardview_dark_background"
        android:background="@drawable/editbox"
        android:layout_centerVertical="true" ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/emailEt"
        android:layout_margin="0dp"
        android:hint="Email"
        android:textColorHint="@color/cardview_dark_background"
        android:paddingLeft="40dp"
        android:textColor="@color/cardview_dark_background"
        android:background="@drawable/editbox"
        android:layout_centerVertical="true"
         ></EditText>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/registerBtn"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/passwordEt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/register"
        ></Button>
    <TextView
        android:layout_width="match_parent"
        android:text="Are u Already Register? "
        android:id="@+id/already_register"
        android:layout_below="@+id/registerBtn"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"></TextView>
</LinearLayout>
</ScrollView>

</LinearLayout>